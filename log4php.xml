<?xml version="1.0" encoding="UTF-8"?>

<!-- 
    more info here:
    http://logging.apache.org/log4php/docs/layouts/pattern.html 
-->

<log4php:configuration xmlns:log4php="http://logging.apache.org/log4php/">
    
    <appender name="myConsoleAppender" class="LoggerAppenderConsole" />
    
    <appender name="myFileAppender" class="LoggerAppenderFile">
        <layout class="LoggerLayoutPattern">
            <param name="conversionPattern" value="%d{Y-m-d H:i:s} %-5p %m (%F:%L) [%X{server.REMOTE_ADDR}]%n" />
        </layout>
        <param name="file" value="/tmp/codevtt.log" />
    </appender>

    <logger name="header">
        <level value="INFO" />
    </logger>
    <logger name="Config">
        <level value="ERROR" />
    </logger>
    <logger name="ConfigMantis">
        <level value="ERROR" />
    </logger>
    <logger name="Holiday">
        <level value="ERROR" />
    </logger>
    
    <logger name="GanttManager">
        <level value="DEBUG" />
    </logger>
    <logger name="GanttActivity">
        <level value="DEBUG" />
    </logger>

    <root>
        <level value="DEBUG" />
        <appender_ref ref="myFileAppender" />
    </root>
</log4php:configuration>

